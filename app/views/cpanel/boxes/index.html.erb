<div class="container">
<fieldset class="col-md-8 col-md-offset-2">
<table class="table table-hover">
  <tr>
    <td>ID</td>
    <td>话题名称</td>
    <td>话题类型</td>
    <td>订阅人数</td>
    <td>卡片数量</td>
    <td>浏览量</td>
    <td>操作</td>
  </tr>

<% @boxes.each do |box| %>
  <tr>
  	<td><%= box.id %></td>
	<td><%= box.name %></td>
	<td><%= box.box_type %></td>
	<td><%= box.subscribes_count %></td>
	<td><%= link_to box.tags_count, cpanel_cards_path(box_id: box.id) %></td>
	<td><%= box.hit_count %></td>
	<td>
	 <%= link_to "编辑", edit_cpanel_box_path(box), :title => "编辑" %>
	</td>
  </tr>
<% end %>
</table>
<%= will_paginate @boxes %>
</fieldset>
</div>