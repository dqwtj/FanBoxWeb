<div class="container">
	<%= simple_form_for([:cpanel, @user]) do |f| %>
	<fieldset class="col-md-6 col-md-offset-3">
		<%= f.error_notification %>
		<%= f.input :name, :label => "姓名" %>
		<%= f.input :mobile, :label => "手机" %>
		<%= f.input :encrypted_password, :label => "密码" %>
		<%= f.input :gender, :label => "性别" %>
		<%= f.input :address, :label => "地址" %>
		<%= f.input :birth_date, :label => "出生日期" %>
		<%= f.input :info, :label => "简介" %>
		<div class="actions">
			<%= f.submit '保存', :class => "btn btn-primary btn-lg btn-block", :disable_with => '保存中' %>
		</div>
	</fieldset>
	<% end %>
</div>