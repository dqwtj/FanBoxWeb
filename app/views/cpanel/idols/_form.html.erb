<div class="container">
	<%= simple_form_for([:cpanel, @idol]) do |f| %>
	<fieldset class="col-md-6 col-md-offset-3">
		<%= f.error_notification %>
		<%= f.input :name, :label => "姓名" %>
		<%= f.input :info, :label => "简介" %>
		<%= f.input :weibo_url, :label => "微博地址" %>
		<%= f.input :avatar_url, :label => "头像地址" %>
		
		<div class="actions">
			<%= f.submit '保存', :class => "btn btn-primary btn-lg btn-block", :disable_with => '保存中' %>
		</div>
	</fieldset>
	<% end %>
</div>